<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles/all.css">
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; padding: 20px; }
        form { max-width: 400px; margin: auto; }
        label, input, textarea { display: block; width: 100%; margin-bottom: 10px; }
        .review-container {border-style: none; border-radius: 20px ; }
        button { background-color:  rgb(250, 182, 73); color: white; padding: 10px; border: none; cursor: pointer; height: 40px; border-radius: 5px; }
    </style>
</head>
<body>
    <nav>
        <div class="logo">AutoCustomizer</div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Signup</a></li>
            <li><a href="/contactus">Contact Us</a></li>
            <li><a href="/Feedback">Feedback</a></li>
        </ul>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 p-3 m-md-auto mt-5 mt-md-4 mt-lg-5 shadow review-container">
                <div class="text-center mt-3">
                    <h2>Contact Us</h2>
                </div>
                <form method="POST" action="/contactus">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                    
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="text-secondary" value="abcd@gmail.com" required>
                    
                    <label for="subject">Subject:</label>
                    <input type="text" id="subject" name="subject" required>
                    
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" required></textarea>
                    
                    <button class="mb-3" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
    const form = document.querySelector("form");

    form.addEventListener("submit", function(event) {
        const nameInput = document.getElementById("name");
        const emailInput = document.getElementById("email");
        const nameRegex = /^[A-Za-z\s.-]+$/;
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        if (!nameRegex.test(nameInput.value)) {
            alert("Name should not contain numbers or special characters.");
            event.preventDefault();
            return;
        }

        if (!emailRegex.test(emailInput.value)) {
            alert("Please enter a valid email in the format: example@domain.com");
            event.preventDefault();
            return;
        }
    });
});
    </script>    
</body>
</html>
