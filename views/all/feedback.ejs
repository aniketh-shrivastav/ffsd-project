<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles/all.css">

    <style>
        body { font-family: Arial, sans-serif; margin: 20px; padding: 20px; }
        label, input, textarea { display: block; width: 100%; margin-bottom: 10px; }
        .stars { display: flex; flex-direction: row-reverse; justify-content: center; }
        .stars input { display: none; }
        .stars label { font-size: 30px; color: gray; cursor: pointer; }
        .stars input:checked ~ label { color: gold; }
        .review-container {border-style: none; border-radius: 20px ; background-color: white; }
        button { background-color: rgb(250, 182, 73); color: white; padding: 10px; border: none; cursor: pointer; height: 40px; border-radius: 5px;}
    </style>
</head>
<body>
    <%- include("../partials/allHeaders") %>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 p-3 m-md-auto mt-5 mt-md-4 mt-lg-5 shadow review-container">
                <div class="text-center mt-3">
                    <h2>Feedback</h2>
                </div>
                <form>
                    <label for="name">Name </label>
                    <input type="text" id="name" name="name" required>
                    
                    <label>Rating:</label>
                    <div class="stars">
                        <input type="radio" id="star5" name="rating" value="5">
                        <label for="star5"><i class="bi bi-star-fill"></i></label>
                        <input type="radio" id="star4" name="rating" value="4">
                        <label for="star4"><i class="bi bi-star-fill"></i></label>
                        <input type="radio" id="star3" name="rating" value="3">
                        <label for="star3"><i class="bi bi-star-fill"></i></label>
                        <input type="radio" id="star2" name="rating" value="2">
                        <label for="star2"><i class="bi bi-star-fill"></i></label>
                        <input type="radio" id="star1" name="rating" value="1">
                        <label for="star1"><i class="bi bi-star-fill"></i></label>
                    </div>
                    
                    <label for="comments">Comments:</label>
                    <textarea id="comments" name="comments" required></textarea>
                    <button class="mb-3" type="submit">Submit</button>
                </form>
            
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.querySelector("form");
            const nameInput = document.getElementById("name");
    
            form.addEventListener("submit", function (e) {
                const nameRegex = /^[A-Za-z\s.-]+$/;
    
                if (!nameRegex.test(nameInput.value.trim())) {
                    alert("Name should not contain numbers or special characters.");
                    e.preventDefault(); // Prevent form submission
                    return;
                }
    
                // Check if a rating is selected
                const ratingChecked = document.querySelector("input[name='rating']:checked");
                if (!ratingChecked) {
                    alert("Please select a rating.");
                    e.preventDefault();
                    return;
                }
    
                // All validations passed
                alert("âœ… Feedback submitted successfully!");
            });
        });
    </script>
</body>
</html>
