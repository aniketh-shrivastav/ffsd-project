<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Communication</title>
    <link rel="stylesheet" href="/styles/customerCommunication.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="/scripts/customerCommunication.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="logo-brand">
            <img src="/public/images3/logo2.jpg" alt="Logo" class="logo">
            <span class="brand">AutoCustomizer</span>
        </div>
        <a href="#" class="menu-btn" onclick="toggleSidebar()">â˜°</a>
        <div class="nav-links" id="navLinks">
            <a href="/service/dashboardService">Dashboard</a>
            <a href="/service/profileSettings">Profile Settings</a>
            <a href="/service/bookingManagement">Booking Management</a>
            <a href="/service/customerCommunication" class="active">Customer Communication</a>
            <a href="/service/earnings">Earnings & Payouts</a>
            <a href="/service/reviews">Reviews & Ratings</a>
            <a href="/logout">Logout</a>
        </div>
    </nav>

    <div class="sidebar" id="sidebar">
        <a href="/service/dashboardService"><i class="fas fa-tachometer-alt"></i></a>
        <a href="/service/profileSettings"><i class="fas fa-user-cog"></i></a>
        <a href="/service/bookingManagement"><i class="fas fa-calendar-alt"></i></a>
        <a href="/service/customerCommunication" class="active"><i class="fas fa-comments"></i></a>
        <a href="/service/earnings"><i class="fas fa-money-bill-wave"></i></a>
        <a href="/service/reviews"><i class="fas fa-star"></i></a>
    </div>

    <div class="communication-container">
        <!-- Customer List Sidebar -->
        <div class="customer-list">
            <h3>Customers</h3>
            <div class="customer-item" onclick="openChat('1', 'Rohith')">
                <img src="/public/images3/customer.jpg" alt="Customer Avatar" class="customer-avatar">
                <div class="customer-details">
                    <span class="customer-name">Rohith</span>
                    <span class="customer-id">ID: 12345</span>
                    <span class="notification">New Message</span>
                </div>
            </div>
            <div class="customer-item" onclick="openChat('2', 'Siva')">
                <img src="/public/images3/customer.jpg" alt="Customer Avatar" class="customer-avatar">
                <div class="customer-details">
                    <span class="customer-name">Siva</span>
                    <span class="customer-id">ID: 67890</span>
                </div>
            </div>
            <!-- Add more customers here -->
        </div>

        <!-- Chat Window -->
        <div class="chat-window" id="chatWindow">
            <!-- Provider Profile Section -->
            <div class="provider-profile">
                <img src="/public/images3/image5.jpg" alt="Provider Avatar" class="provider-avatar">
                <div class="provider-details">
                    <span class="provider-name">Service Provider</span>
                    <span class="provider-status">Online</span>
                </div>
            </div>

            <div class="chat-header">
                <h2>Chat with <span id="customerName">Customer</span></h2>
                <span class="customer-id">ID: <span id="customerId">N/A</span></span>
            </div>
            <div class="chat-messages" id="chatMessages">
                <!-- Messages will be dynamically added here -->
            </div>
            <div class="chat-input">
                <input type="text" id="chatInput" placeholder="Type your message...">
                <button onclick="sendMessage()"><i class="fas fa-paper-plane"></i></button>
            </div>
        </div>
    </div>
</body>
</html>