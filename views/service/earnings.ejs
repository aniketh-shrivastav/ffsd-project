<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Earnings & Payouts</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/styles/earnings.css">
    <script>
        const transactionData = JSON.parse('<%- JSON.stringify(payoutData.transactions) %>');
      </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    
    <%- include("../partials/serviceHeaders") %>

    <div class="sidebar" id="sidebar">
        <!-- <a href="#" class="close-btn" onclick="toggleSidebar()">&times; Close</a> -->
        <a href="/service/dashboardService"><i class="fas fa-tachometer-alt"></i> </a>
        <a href="/service/profilSettings"><i class="fas fa-user-cog"></i> </a>
        <a href="/service/bookingManagement"><i class="fas fa-calendar-alt"></i> </a>
        <a href="/service/customerCommunication"><i class="fas fa-comments"></i></a>
        <a href="/service/earnings" class="active"><i class="fas fa-money-bill-wave"></i> </a>
        <a href="/service/reviews"><i class="fas fa-star"></i> </a>
    </div>

    <div class="earnings-container">
        <h1>Earnings & Payouts</h1>
    
        
        <div class="earnings-summary">
            <div class="summary-card">
                <h2>Total Earnings</h2>
                <p >₹50,500</p> 
            </div>
            <div class="summary-card">
                <h2>Processing Payouts</h2>
                <p>₹1,200.00</p>
            </div>
            <div class="summary-card">
                <h2>Today's Earnings</h2>
                <p id="todaysEarnings">₹0.00</p> <!-- Dynamic value will be updated here -->
            </div>
        </div>
    
     
        <div class="earnings-graph">
           
            <div id="totalEarnings" class="total-earnings">Total Earnings: ₹0</div>
    
            <div class="graph-controls">
                <label for="timeRange">Select Time Range:</label>
                <select id="timeRange" onchange="updateChart()">
                    <option value="1">Last Month</option>
                    <option value="6">Last 6 Months</option>
                    <option value="12">Last 1 Year</option>
                </select>
            </div>
            <canvas id="earningsChart" width="400" height="200"></canvas>
        </div>
    
       
        <div class="payout-history">
            <h2>Payout History</h2>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2023-10-01</td>
                        <td>₹1,500.00</td>
                        <td><span class="status completed">Completed</span></td>
                        <td><button class="btn view-btn" onclick="viewDetails('2023-10-01', '₹1,500.00', 'Completed', 'ORD12345', 'CUST1001', 'Car Wash')">View Details</button></td>
                    </tr>
                    <tr>
                        <td>2023-09-25</td>
                        <td>₹2,000.00</td>
                        <td><span class="status completed">Completed</span></td>
                        <td><button class="btn view-btn" onclick="viewDetails('2023-09-25', '₹2,000.00', 'Completed', 'ORD12346', 'CUST1002', 'Oil Change')">View Details</button></td>
                    </tr>
                    <tr>
                        <td>2023-09-15</td>
                        <td>₹1,200.00</td>
                        <td><span class="status processing">Processing</span></td>
                        <td><button class="btn view-btn" onclick="viewDetails('2023-09-15', '₹1,200.00', 'Processing', 'ORD12347', 'CUST1003', 'Tire Rotation')">View Details</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    

    <script src="/scripts/earnings.js"></script>
</body>
</html>