<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Provider Dashboard</title>
    <link rel="stylesheet" href="/styles/dashboardService.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <%- include("../partials/serviceHeaders") %>

    <div class="sidebar" id="sidebar">
        <a href="/service/dashboardService"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="/service/profileSettings"><i class="fas fa-user-cog"></i> Profile</a>
        <a href="/service/bookingManagement"><i class="fas fa-calendar-alt"></i> Bookings</a>
        <a href="/service/customerCommunication"><i class="fas fa-comments"></i> Communication</a>
        <a href="/service/earnings"><i class="fas fa-money-bill-wave"></i> Earnings</a>
        <a href="/service/reviews"><i class="fas fa-star"></i> Reviews</a>
    </div>

    <div class="dashboard-container">
        <div class="dashboard-header">
            <h2>Welcome <%= provider.name %>! Here's your daily overview.</h2>
        </div>

        <div class="cards">
            <div class="card">
                <div class="card-icon">
                    <i class="fas fa-rupee-sign"></i>
                </div>
                <div class="card-content">
                    <h2>Today's Earnings</h2>
                    <p class="amount">â‚¹<%= todayEarnings %></p>
                    <p class="subtext">Today's completed services</p>
                </div>
            </div>

            <div class="card">
                <div class="card-icon">
                    <i class="fas fa-tools"></i>
                </div>
                <div class="card-content">
                    <h2>Ongoing Services</h2>
                    <p class="amount"><%= ongoingServices %></p>
                    <p class="subtext">Currently in progress</p>
                </div>
            </div>

            <div class="card">
                <div class="card-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="card-content">
                    <h2>Completed Services</h2>
                    <p class="amount"><%= completedServices %></p>
                    <p class="subtext">This week</p>
                </div>
            </div>

            <div class="card">
                <div class="card-icon">
                    <i class="fas fa-smile"></i>
                </div>
                <div class="card-content">
                    <h2>Customer Satisfaction</h2>
                    <p class="amount"><%= avgRating %>/5</p>
                    <p class="subtext">Based on <%= reviewCount %> reviews</p>
                </div>
            </div>
        </div>

        <div class="charts">
            <div class="chart-card">
                <h2>Service Distribution</h2>
                <canvas id="servicePieChart"></canvas>
            </div>

            <div class="chart-card">
                <h2>Earnings Overview</h2>
                <canvas id="earningsBarChart"></canvas>
            </div>
        </div>

        <div class="recent-activity">
            <h2>Recent Activity</h2>
            <ul class="activity-list">
                <% recentActivities.forEach(activity => { %>
                    <li>
                        <% if(activity.status === 'Completed') { %>
                            <i class="fas fa-check-circle" style="color: #1abc9c;"></i>
                            <span>Completed service for <%= activity.customerId.name %></span>
                        <% } else if(activity.status === 'Confirmed') { %>
                            <i class="fas fa-tools" style="color: #3498db;"></i>
                            <span>Started service for <%= activity.customerId.name %></span>
                        <% } else if(activity.rating) { %>
                            <i class="fas fa-star" style="color: #f1c40f;"></i>
                            <span>New <%= activity.rating %> star review from <%= activity.customerId.name %></span>
                        <% } else { %>
                            <i class="fas fa-calendar-plus" style="color: #9b59b6;"></i>
                            <span>New booking from <%= activity.customerId.name %></span>
                        <% } %>
                        <span class="time"><%= activity.createdAt.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>

    <script src="/scripts/dashboardService.js"></script>
</body>
</html>