<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles/admin-consistent.css">
    <!-- Add Chart.js Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
</head>
<body>
    
    <!-- Sidebar Navigation -->
    <div class="navbar">
        <div class="logo">
            <h2>Manager's Panel</h2>
        </div>
        <nav>
            <ul>
                <li><a href="/manager/dashboard">
                     Dashboard
                </a></li>
                <li><a href="/manager/users">
                     User Management
                </a></li>
                <li><a href="/manager/services">
                     User Profiles
                </a></li>
                <li><a href="/manager/orders">
                     Orders & Bookings
                </a></li>
                <li><a href="/manager/payments">
                     Payments
                </a></li>
                <li><a href="/manager/support">
                     Support
                </a></li>
                <li><a href="/logout">
                    Logout
               </a></li>
            </ul>
          </nav>
    </div>

        <div class="dashboard-container">
            <h1>Dashboard Overview</h1>
            
            <!-- Statistics Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Users</h3>
                    <p class="number">1,234</p>
                    <p class="trend up">+5% this month</p>
                </div>
                <div class="stat-card">
                    <h3>Platform Activity</h3>
                    <p class="number">856 active now</p>
                </div>
                <div class="stat-card">
                    <h3>Total Earnings</h3>
                    <p class="number">$45,678</p>
                    <p class="trend up">+12% this month</p>
                </div>
                <div class="stat-card">
                    <h3>Commission (20%)</h3>
                    <p class="number">$9,135</p>
                    <p class="trend up">+12% this month</p>
                </div>
            </div>
            
            <!-- Chart Section -->
            <div class="charts-container">
                <!-- User Distribution -->
                <div class="chart-wrapper">
                    <h2>User Distribution</h2>
                    <div class="chart-box">
                        <canvas id="userDistributionChart"></canvas>
                    </div>
                </div>
                
                <!-- Revenue & Commission -->
                <div class="chart-wrapper">
                    <h2>Monthly Revenue & Commission</h2>
                    <div class="chart-box">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
                
                <!-- User Growth -->
                <div class="chart-wrapper">
                    <h2>User Growth</h2>
                    <div class="chart-box">
                        <canvas id="userGrowthChart"></canvas>
                    </div>
                </div>
                
            </div>

            <!-- Recent Activity -->
            <div class="recent-activity">
                <h2>Recent Activity</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>10:30 AM</td>
                            <td>John Doe</td>
                            <td>New Order</td>
                            <td>Custom Rim Installation</td>
                        </tr>
                        <tr>
                            <td>09:45 AM</td>
                            <td>Jane Smith</td>
                            <td>Service Listed</td>
                            <td>Paint Protection Film</td>
                        </tr>
                        <tr>
                            <td>09:15 AM</td>
                            <td>Mike Johnson</td>
                            <td>Payment</td>
                            <td>$599 - Body Kit Installation</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="/js/admin.js"></script>
    <script src="/js/admin-pages.js"></script>
    
    <!-- Chart Initialization Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User Distribution Pie Chart
            const userDistributionCtx = document.getElementById('userDistributionChart').getContext('2d');
            const userDistributionChart = new Chart(userDistributionCtx, {
                type: 'pie',
                data: {
                    labels: ['Customers', 'Service Providers', 'Sellers', 'Admin'],
                    datasets: [{
                        data: [650, 340, 230, 14],
                        backgroundColor: [
                            '#4299e1', // Blue for Customers
                            '#48bb78', // Green for Service Providers
                            '#ed8936', // Orange for Sellers
                            '#9f7aea'  // Purple for Admin
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#ffffff'
                            }
                        },
                        title: {
                            display: true,
                            text: 'User Type Distribution',
                            color: '#ffffff',
                            font: {
                                size: 16
                            }
                        }
                    }
                }
            });
            
            // Revenue & Commission Bar Chart
            const revenueCtx = document.getElementById('revenueChart').getContext('2d');
            const revenueChart = new Chart(revenueCtx, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [
                        {
                            label: 'Total Revenue',
                            data: [8500, 9200, 7800, 10500, 11200, 9800],
                            backgroundColor: '#4299e1',
                            borderRadius: 5
                        },
                        {
                            label: 'Commission (20%)',
                            data: [1700, 1840, 1560, 2100, 2240, 1960],
                            backgroundColor: '#48bb78',
                            borderRadius: 5
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#ffffff'
                            }
                        },
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#ffffff',
                                callback: function(value) {
                                    return '$' + value;
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#ffffff'
                            }
                        }
                    }
                }
            });
            
            // User Growth Line Chart
            const userGrowthCtx = document.getElementById('userGrowthChart').getContext('2d');
            const userGrowthChart = new Chart(userGrowthCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [
                        {
                            label: 'Total Users',
                            data: [850, 950, 1050, 1150, 1200, 1234],
                            borderColor: '#4299e1',
                            tension: 0.3,
                            fill: false
                        },
                        {
                            label: 'Service Providers',
                            data: [200, 230, 260, 290, 320, 340],
                            borderColor: '#48bb78',
                            tension: 0.3,
                            fill: false
                        },
                        {
                            label: 'Sellers',
                            data: [100, 120, 150, 180, 210, 230],
                            borderColor: '#ed8936',
                            tension: 0.3,
                            fill: false
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#ffffff'
                            }
                        },
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#ffffff'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#ffffff'
                            }
                        }
                    }
                }
            });
            
            // Service Categories Doughnut Chart
            const serviceCategoriesCtx = document.getElementById('serviceCategoriesChart').getContext('2d');
            const serviceCategoriesChart = new Chart(serviceCategoriesCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Automotive', 'Electronics', 'Home Decor', 'Apparel', 'Beauty', 'Other'],
                    datasets: [{
                        data: [30, 25, 15, 10, 10, 10],
                        backgroundColor: [
                            '#4299e1',
                            '#48bb78',
                            '#ed8936',
                            '#f56565',
                            '#9f7aea',
                            '#cbd5e0'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#ffffff'
                            }
                        },
                        title: {
                            display: true,
                            text: 'Service Category Distribution (%)',
                            color: '#ffffff',
                            font: {
                                size: 16
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>