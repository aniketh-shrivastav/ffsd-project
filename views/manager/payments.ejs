<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payments | Admin Panel</title>
  <link rel="stylesheet" href="/styles/admin-consistent.css">
</head>
<body>

  <!-- Sidebar -->
  <div class="navbar">
    <div class="logo">
        <h2>Manager's Panel</h2>
    </div>
    <nav>
      <ul>
        <li><a href="/manager/dashboard">
             Dashboard
        </a></li>
        <li><a href="/manager/users">
             User Management
        </a></li>
        <li><a href="/manager/services">
             User Profiles 
        </a></li>
        <li><a href="/manager/orders">
             Orders & Bookings
        </a></li>
        <li><a href="/manager/payments">
             Payments
        </a></li>
        <li><a href="/manager/support">
             Support
        </a></li>
        <li><a href="/logout">
            Logout
       </a></li>
    </ul>
    </ul>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="main-content container" style="margin-top: 60px;">
    <h1>Payments Overview</h1>

    <table class="order-table">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Customer</th>
          <th>Item/Service</th>
          <th>Amount</th>
          <th>Profit (20%)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% payments.forEach(payment => { %>
          <tr>
            <td><%= payment.id %></td>
            <td><%= payment.customer %></td>
            <td><%= payment.item %></td>
            <td>$<%= payment.amount %></td>
            <td>$<%= (payment.amount * 0.2).toFixed(2) %></td>
            <td><button class="btn btn-view">View</button></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
