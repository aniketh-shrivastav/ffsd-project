<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buy Car Parts</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
        }

        header {
            background-color: #333;
            color: white;
            padding: 15px;
            text-align: center;
        }

        header a {
            color: white;
            text-decoration: none;
            margin-left: 20px;
        }

        h1, h2 {
            text-align: center;
        }

        .parts-list {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            padding: 20px;
            justify-items: center;
        }

        .part {
            background: white;
            padding: 15px;
            text-align: center;
            border-radius: 8px;
            width: 250px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

        .part:hover {
            transform: scale(1.05);
        }

        .part img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 5px;
        }

        .part p {
            font-size: 18px;
            font-weight: bold;
            margin: 10px 0;
        }

        button {
            background: green;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
        }

        button:hover {
            background: darkgreen;
        }

        @media (max-width: 1024px) {
            .parts-list {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 600px) {
            .parts-list {
                grid-template-columns: repeat(1, 1fr);
            }
        }
    </style>
</head>
<body>
    <header>
        <h1>Product Purchase</h1>
        <a href="/customer/index">Back to Dashboard</a>
        <a href="/customer/cart">View Cart</a>
    </header>

    <main>
        <h2>Available Car Parts</h2>
        <div class="parts-list">
            <div class="part">
                <img src="images/bodykit.jpg" alt="Body Kit">
                <p>Body Kit - $500</p>
                <button class="add-to-cart" data-name="Body Kit" data-price="500">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/spoiler.jpg" alt="Spoiler">
                <p>Spoiler - $300</p>
                <button class="add-to-cart" data-name="Spoiler" data-price="300">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/alloywheels.jpg" alt="Alloy Wheels">
                <p>Alloy Wheels - $800</p>
                <button class="add-to-cart" data-name="Alloy Wheels" data-price="800">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/steeringwheel.jpg" alt="Steering Wheel">
                <p>Steering Wheel - $150</p>
                <button class="add-to-cart" data-name="Steering Wheel" data-price="150">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/brakes.jpg" alt="Brake Pads">
                <p>Brake Pads - $120</p>
                <button class="add-to-cart" data-name="Brake Pads" data-price="120">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/exhaust.jpg" alt="Performance Exhaust">
                <p>Performance Exhaust - $600</p>
                <button class="add-to-cart" data-name="Performance Exhaust" data-price="600">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/suspension.jpg" alt="Suspension Kit">
                <p>Suspension Kit - $750</p>
                <button class="add-to-cart" data-name="Suspension Kit" data-price="750">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/headlights.jpg" alt="LED Headlights">
                <p>LED Headlights - $250</p>
                <button class="add-to-cart" data-name="LED Headlights" data-price="250">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/turbo.jpg" alt="Turbocharger">
                <p>Turbocharger - $1,500</p>
                <button class="add-to-cart" data-name="Turbocharger" data-price="1500">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/seats.jpg" alt="Racing Seats">
                <p>Racing Seats - $900</p>
                <button class="add-to-cart" data-name="Racing Seats" data-price="900">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/gearshift.jpg" alt="Gear Shift Knob">
                <p>Gear Shift Knob - $80</p>
                <button class="add-to-cart" data-name="Gear Shift Knob" data-price="80">Add to Cart</button>
            </div>
            <div class="part">
                <img src="images/tailights.jpg" alt="Tail Lights">
                <p>Tail Lights - $220</p>
                <button class="add-to-cart" data-name="Tail Lights" data-price="220">Add to Cart</button>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const addToCartButtons = document.querySelectorAll(".add-to-cart");

            addToCartButtons.forEach(button => {
                button.addEventListener("click", function() {
                    let name = this.getAttribute("data-name");
                    let price = parseFloat(this.getAttribute("data-price"));

                    let cart = JSON.parse(localStorage.getItem("cart")) || [];
                    
                    // Check if item already exists
                    let existingItem = cart.find(item => item.name === name);
                    if (existingItem) {
                        existingItem.quantity += 1;
                    } else {
                        cart.push({ name, price, quantity: 1 });
                    }

                    localStorage.setItem("cart", JSON.stringify(cart));
                    alert(`${name} added to cart!`);
                });
            });
        });
    </script>
</body>
</html>
