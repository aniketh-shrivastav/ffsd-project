<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profile Settings</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #e2eafc, #cfd9df);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 20px;
    }

    .profile-container {
      background: #fff;
      padding: 35px 30px;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
      width: 100%;
      max-width: 420px;
      transition: all 0.3s ease;
      animation: fadeIn 0.6s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .header {
      text-align: center;
      margin-bottom: 25px;
    }

    .header h2 {
      font-size: 26px;
      margin: 0;
      color: #333;
      font-weight: 600;
    }

    a {
      display: inline-block;
      margin-bottom: 15px;
      text-decoration: none;
      color: #3498db;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    a:hover {
      color: #216a94;
    }

    .profile-content {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .profile-content img {
      width: 110px;
      height: 110px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 12px;
      border: 4px solid #dfe6e9;
      transition: transform 0.3s;
    }

    .profile-content img:hover {
      transform: scale(1.05);
    }

    .profile-content input[type="file"] {
      margin-bottom: 20px;
      font-size: 14px;
    }

    .form-group {
      width: 100%;
      margin-bottom: 18px;
    }

    .form-group label {
      display: block;
      font-weight: 600;
      margin-bottom: 6px;
      color: #2d3436;
    }

    .form-group input {
      width: 100%;
      padding: 10px 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 15px;
      transition: border 0.3s ease;
    }

    .form-group input:focus {
      border-color: #3498db;
      outline: none;
    }

    .buttons {
      display: flex;
      justify-content: space-between;
      gap: 12px;
      margin-top: 25px;
    }

    .buttons button {
      flex: 1;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .buttons button:first-child {
      background-color: #e74c3c;
      color: white;
    }

    .buttons button:first-child:hover {
      background-color: #c0392b;
    }

    .buttons button:last-child {
      background-color: #2ecc71;
      color: white;
    }

    .buttons button:last-child:hover {
      background-color: #27ae60;
    }

    @media screen and (max-width: 500px) {
      .profile-container {
        padding: 25px 20px;
      }

      .header h2 {
        font-size: 22px;
      }
    }
    .buttons {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-top: 25px;
}

.buttons button {
  padding: 12px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 15px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.buttons button:nth-child(1) {
  background-color: #e74c3c;
  color: white;
}

.buttons button:nth-child(2) {
  background-color: #2ecc71;
  color: white;
}

.buttons button:nth-child(3) {
  background-color: #bd2130;
  color: white;
}
.buttons button:nth-child(3):hover {
  background-color: #941e2a;
}
  </style>
</head>
<body>
    <div class="profile-container">
      <a href="/customer/index">‚Üê Back to Dashboard</a>
      <div class="header">
        <h2>My Profile</h2>
      </div>
      <div class="profile-content">
  
        <form id="profileForm" action="/customer/profile" method="POST">
          <input type="hidden" name="userId" value="<%= user.id %>" />
          
          <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" value="<%= user.name %>" placeholder="Enter your name" required />
          </div>
  
          <div class="form-group">
            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" name="phone" value="<%= user.phone %>" placeholder="Enter your phone number" />
          </div>
  
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" name="address" value="<%= profile.address %>" placeholder="Enter your address" />
          </div>
  
          <div class="form-group">
            <label for="district">District</label>
            <input type="text" id="district" name="district" value="<%= profile.district %>" placeholder="Enter your district" />
          </div>
  
          <div class="form-group">
            <label for="carModel">Car Model</label>
            <input type="text" id="carModel" name="carModel" value="<%= profile.carModel %>" placeholder="Enter your car model" />
          </div>
  
          <div class="form-group">
            <label for="payments">Payments(COD or e-payments)</label>
            <input type="text" id="payments" name="payments" value="<%= profile.payments %>" placeholder="Enter payment details" />
          </div>
  
          <div class="buttons">
            <button type="button" onclick="logout()">Logout</button>
            <button type="submit">Save Changes</button>
            <button type="button" onclick="deleteProfile()">Delete Profile</button>
          </div>
        </form>
      </div>
    </div>
  
    <script>
      // Preview uploaded profile image
      const imageUpload = document.getElementById('imageUpload');
      const profileImage = document.getElementById('profileImage');
  
      imageUpload.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = (event) => {
            profileImage.src = event.target.result;
          };
          reader.readAsDataURL(file);
        }
      });
  
      // Logout function (redirect to logout route)
      function logout() {
        window.location.href = "/logout";
      }

      function deleteProfile() {
  if (confirm("Are you sure you want to permanently delete your account? This action cannot be undone.")) {
    fetch('/customer/delete-profile', {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ userId: "<%= user._id %>" })
    })
    .then(res => {
      if (res.ok) {
        alert("Your profile has been deleted.");
        window.location.href = "/logout";
      } else {
        return res.json().then(data => {
          throw new Error(data.message || "Deletion failed.");
        });
      }
    })
    .catch(err => alert(err.message));
  }
}
    </script>
  </body>
  </html>