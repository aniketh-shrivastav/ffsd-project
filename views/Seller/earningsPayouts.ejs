<!DOCTYPE html>
<html>
<head>
    <title>Earnings & Payouts</title>
    <link href="/Css/CStyle.css" rel="stylesheet">
    <style>
    /* Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(135deg, #f5f7fa, #c3cfe2); /* Subtle gradient background */
    color: #333;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    min-height: 100vh;
    display: block;
}

/* Navbar positioning adjustment */
body > nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
}

/* Page header box - New addition */
h1 {
    text-align: center;
    margin: 0 0 30px 0;
    font-size: 2.5rem;
    color: rgb(60, 59, 59);
    font-weight: 700;
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    padding: 25px 0;
    border-radius: 12px 12px 0 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 100%;
}

/* Main content container */
.container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 90%;
    max-width: 1000px;
    padding: 0 0 40px 0; /* Removed top padding to accommodate header box */
    margin: 80px auto; /* Added top margin to account for navbar */
}

/* Content area inside container */
.container > *:not(h1) {
    padding-left: 40px;
    padding-right: 40px;
}

.cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin: 30px 40px;
}

.card {
    background: linear-gradient(135deg, #6a11cb, #2575fc); /* Vibrant gradient from newstyle.css */
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    color: white;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.card h2 {
    margin: 0 0 10px;
    font-weight: 600;
    font-size: 1.5em;
}

.card p {
    font-size: 1.5em;
    margin: 10px 0;
    font-weight: 700;
}

.transactions {
    background: white;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 0 40px 30px 40px;
}

.transactions h2 {
    color: #6a11cb;
    margin-top: 0;
    font-size: 1.8em;
    font-weight: 600;
    margin-bottom: 20px;
}

.transactions table {
    width: 100%;
    border-collapse: collapse;
}

.transactions th, .transactions td {
    padding: 15px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}

.transactions th {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    color: white;
    font-weight: 600;
}

.transactions tr:hover {
    background-color: #f1f1f1;
}

form {
    background: white;
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 30px 40px;
}

form label {
    display: block;
    margin-bottom: 10px;
    font-weight: 600;
    color: #6a11cb;
}

form input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    margin-bottom: 20px;
    font-family: 'Poppins', sans-serif;
    font-size: 1em;
    transition: border 0.3s ease, box-shadow 0.3s ease;
}

form input:focus {
    outline: none;
    border-color: #6a11cb;
    box-shadow: 0 0 0 2px rgba(106, 17, 203, 0.2);
}

form button {
    width: 100%;
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    color: white;
    border: none;
    padding: 15px;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    font-size: 1em;
    transition: background 0.3s ease, transform 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

form button:hover {
    background: linear-gradient(135deg, #5c0fb3, #2169e8);
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
}

form button:active {
    transform: translateY(0);
}

/* Footer adjustments */
footer {
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    color: white;
    text-align: center;
    padding: 15px;
    position: relative; /* Changed from fixed to relative */
    bottom: 0;
    width: 100%;
    box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
    margin-top: 40px;
}

footer p {
    margin: 0;
    font-size: 1em;
    font-weight: 500;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .container {
        padding: 0 0 20px 0;
        width: 95%;
        margin-top: 60px; /* Smaller top margin on mobile */
    }
    
    .container > *:not(h1) {
        padding-left: 20px;
        padding-right: 20px;
    }
    
    .cards {
        grid-template-columns: 1fr;
        margin: 20px;
    }
    
    h1 {
        font-size: 2em;
        padding: 20px 0;
    }
    
    .transactions, form {
        margin: 20px;
    }
}
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="container">
        <h1>Earnings & Payouts</h1>
        <div class="cards">
            <div class="card">
                <h2>Total Earnings</h2>
                <p>$<%= payoutData.totalEarnings %></p>
            </div>
            <div class="card">
                <h2>Pending Payouts</h2>
                <p>$<%= payoutData.pendingPayouts %></p>
            </div>
            <div class="card">
                <h2>Available Balance</h2>
                <p>$<%= payoutData.availableBalance %></p>
            </div>
        </div>

        <div class="transactions">
            <h2>Transaction History</h2>
            <table>
                <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Status</th>
                </tr>
                <% payoutData.transactions.forEach(transaction => { %>
                    <tr>
                        <td><%= transaction.date %></td>
                        <td>$<%= transaction.amount %></td>
                        <td><%= transaction.status %></td>
                    </tr>
                <% }) %>                
            </table>
        </div>

        <form action="/request-payout" method="POST">
            <label for="amount">Amount to Withdraw ($)</label>
            <input type="number" id="amount" name="amount" min="1" max="<%= payoutData.availableBalance %>" required>
            <button type="submit">Request Payout</button>
        </form>
    </div>
</body>
</html>
