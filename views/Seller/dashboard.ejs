<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Dashboard | AutoCustomizer</title>
    <link href="/Css/CStyle.css" rel="stylesheet">
    <link href="/newstyle.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <%- include('../partials/navbar') %>

    <header>
        <h1>AutoCustomizer Seller Dashboard</h1>
    </header>

    <main>
        <!-- Stats Section -->
        <section class="stats">
            <div class="card">
                <h2>Total Sales</h2>
                <p><strong><%= dashboard.totalSales %></strong></p>
            </div>
            <div class="card">
                <h2>Total Earnings</h2>
                <p>â‚¹<strong><%= dashboard.totalEarnings %></strong></p>
            </div>
            <div class="card">
                <h2>Total Orders</h2>
                <p><strong><%= dashboard.totalOrders %></strong></p>
            </div>
        </section>

        <!-- Alerts Section -->
        <section class="alerts">
            <h2>Stock Alerts</h2>
            <% if (dashboard.stockAlerts.length > 0) { %>
                <ul>
                    <% dashboard.stockAlerts.forEach(alert => { %>
                        <li>
                            <strong><%= alert.product %></strong> - Only <%= alert.stock %> left!
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>All products are well-stocked.</p>
            <% } %>
        </section>

        <!-- Orders and Pie Chart Section -->
        <div class="orders-and-chart">
            <!-- Recent Orders Section -->
            <section class="orders">
                <h2>Recent Orders</h2>
                <% if (dashboard.recentOrders.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% dashboard.recentOrders.forEach(order => { %>
                                <tr>
                                    <td><%= order.orderId %></td>
                                    <td><%= order.customer %></td>
                                    <td><%= order.status %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>No recent orders available.</p>
                <% } %>
            </section>

            <!-- Pie Chart Section -->
            <section class="pie-chart">
                <h2>Order Status Distribution</h2>
                <canvas id="orderStatusChart"></canvas> <!-- Pie Chart Canvas -->
            </section>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 AutoCustomizer | All Rights Reserved</p>
    </footer>

    <script>
        // Pie Chart Configuration
        const orderStatusCtx = document.getElementById('orderStatusChart').getContext('2d');
        const orderStatusChart = new Chart(orderStatusCtx, {
            type: 'pie', // Pie chart
            data: {
                labels: ['Completed', 'Pending', 'Cancelled'], // Labels for pie chart
                datasets: [{
                    label: 'Order Status',
                    data: [65, 25, 10], // Sample data
                    backgroundColor: [
                        '#6a11cb', // Violet
                        '#2575fc', // Blue
                        '#ff6f61'  // Coral
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom', // Legend at the bottom
                    }
                }
            }
        });
    </script>
</body>
</html>